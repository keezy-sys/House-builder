{
  "name": "house-builder",
  "private": true,
  "type": "module",
  "scripts": {
    "lint:js": "eslint app.js",
    "lint:css": "stylelint styles.css",
    "lint:html": "html-validate index.html",
    "format:check": "prettier --check .",
    "serve": "npx serve . -l 3000",
    "test:e2e": "npm run serve & npx wait-on http://127.0.0.1:3000 && npx playwright test",
    "test": "npm run lint:js && npm run lint:css && npm run lint:html && npm run format:check && npm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "eslint": "^9.0.0",
    "html-validate": "^8.0.0",
    "prettier": "^3.2.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "wait-on": "^9.0.3"
  }
}
